<%= simple_form_for @unit, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, wrapper: "horizontal_form", input_wrapper_html: { class: "col-xs-2" }  %>
  <% if false %>
  <%= error_span(@unit[:name]) %>
  <% end %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                units_path, :class => 'btn btn-default' %>
<% end %>
