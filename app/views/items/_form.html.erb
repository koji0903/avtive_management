<%= simple_form_for @item, wrapper: "horizontal_form", :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, input_wrapper_html: { class: "col-xs-6" }  %>
  <% if false %>
  <%= error_span(@item[:name]) %>
  <% end %>
  <%= f.input :category_id, input_wrapper_html: { class: "col-xs-2" }   %>
  <% if false %>
  <%= error_span(@item[:category_id]) %>
  <% end %>
  <%= f.input :place, input_wrapper_html: { class: "col-xs-2" }  %>
  <% if false %>
  <%= error_span(@item[:place]) %>
  <% end %>
  <%= f.input :status, input_wrapper_html: { class: "col-xs-2" }   %>
  <% if false %>
  <%= error_span(@item[:status]) %>
  <% end %>
  <%= f.input :number, input_wrapper_html: { class: "col-xs-2" }   %>
  <% if false %>
  <%= error_span(@item[:number]) %>
  <% end %>
  <%= f.input :unit_id, input_wrapper_html: { class: "col-xs-2" }   %>
  <% if false %>
  <%= error_span(@item[:unit_id]) %>
  <% end %>
  <%= f.input :description, input_wrapper_html: { class: "col-xs-8" }   %>
  <% if false %>
  <%= error_span(@item[:description]) %>
  <% end %>
  <%= f.input :image, input_wrapper_html: { class: "col-xs-2" }   %>
  <% if false %>
  <%= error_span(@item[:image]) %>
  <% end %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                items_path, :class => 'btn btn-default' %>
<% end %>
