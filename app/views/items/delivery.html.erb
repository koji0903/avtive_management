<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.delivery', 'Delivery %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<%= simple_form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name, :readonly => true%>
  <% if false %>
  <%= error_span(@item[:name]) %>
  <% end %>

  <%= f.input :number %>
  <% if false %>
  <%= error_span(@item[:number]) %>
  <% end %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                items_path, :class => 'btn btn-default' %>
<% end %>

